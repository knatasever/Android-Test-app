<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.english.test.app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/verbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@android:drawable/spinner_background"
            android:fontFamily="sans-serif-condensed"
            android:text="VERBS (Fiiller)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/adjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@android:drawable/spinner_background"
            android:fontFamily="sans-serif-condensed"
            android:text="ADJECTIVES (SÄ±fatlar)"
            android:textSize="18sp"


            />

        <Button
            android:id="@+id/zarf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@android:drawable/spinner_background"
            android:fontFamily="sans-serif-condensed"
            android:text="ADVERBS (zarflar)"
            android:textSize="18sp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adviewmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="SMART_BANNER"
            app:adUnitId="ca-app-pub-5436381102879919/4090821235" />


    </LinearLayout>

</RelativeLayout>
